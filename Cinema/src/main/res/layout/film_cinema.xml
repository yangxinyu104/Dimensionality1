<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_330"
    android:layout_height="match_parent"
    android:orientation="horizontal"


   >
    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/film_cinema_shape"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_100">




    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="@dimen/dp_3"
        android:id="@+id/film_cinema_SimpleDraweeViews"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <TextView
            android:id="@+id/film_cinema_names"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/film_cinema_addres"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/film_cinema_xin"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />

        </RelativeLayout>




    </LinearLayout>
    </LinearLayout>


</LinearLayout>
