<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.StartActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/attention_film_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/sound_item_name"
            android:text="dasdasdsdasda"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/sound_item_time"
                android:layout_alignParentRight="true"
                android:text="dasdasdsdasda"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/sound_item_message"
                android:text="dasdasdsdasda"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/sound_item_num"
                    android:gravity="center"
                    android:background="@drawable/sound_shape_select"
                    android:layout_alignParentRight="true"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>




</LinearLayout>