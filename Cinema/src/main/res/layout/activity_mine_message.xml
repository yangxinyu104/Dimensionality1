<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户信息"/>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginTop="@dimen/dp_30"
        app:cardElevation="5px"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#FFFFFDFD"
        android:layout_width="@dimen/dp_321"
        android:layout_height="@dimen/dp_188">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户头像"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/info_head"
                    app:roundedCornerRadius="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/head"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp_34">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"/>
                <TextView
                    android:id="@+id/info_name"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="念初、采菊东篱"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp_34">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户性别"/>
                <TextView
                    android:id="@+id/info_sex"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="男"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="34dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期"/>
                <TextView
                    android:id="@+id/info_birthday"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2000-05-05"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginTop="@dimen/dp_20"
        app:cardElevation="5px"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#FFFFFDFD"
        android:layout_width="@dimen/dp_321"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp_34">

                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"/>
                <TextView
                    android:id="@+id/info_phone"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="18443865200"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp_34">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录时间"/>
                <TextView
                    android:id="@+id/info_email"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2436679333@qq.com"/>
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginTop="@dimen/dp_20"
        app:cardElevation="5px"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#FFFFFDFD"
        android:layout_width="@dimen/dp_321"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重置密码"/>
                <ImageView
                    android:id="@+id/use_ch"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/next_default"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/userinfo_back1"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_30"
            android:src="@mipmap/my_return"/>
    </RelativeLayout>
</LinearLayout>