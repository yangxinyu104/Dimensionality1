<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:id="@+id/linear_layout"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_30"
        app:cardBackgroundColor="#FFFFFDFD"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardMaxElevation="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_view"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_85"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_12"/>

            <TextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="456"
                android:layout_marginLeft="@dimen/dp_12"/>

            <TextView
                android:id="@+id/text_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="789"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/collection_iteam"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginVertical="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_263"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selector_xin"
            android:button="@null" />

    </android.support.v7.widget.CardView>
</LinearLayout>
