<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <RelativeLayout
            android:id="@+id/one2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/filmreview_heard2"
                app:roundAsCircle="true"
                app:roundedCornerRadius="@dimen/dp_180"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />

            <TextView
                android:id="@+id/filmreview_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/filmreview_heard2"
                android:text="123"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <TextView
            android:id="@+id/filmreview_pinglun2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one2"
            android:layout_marginTop="@dimen/dp_12"
            android:text="123123"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chaxunpinglun2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filmreview_pinglun2"
            android:layout_marginLeft="@dimen/dp_30"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chaxunpinglun2">

            <TextView
                android:id="@+id/filmreview_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="05-21  13:14"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:id="@+id/two2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50">

                <ImageView
                    android:id="@+id/dianzancheckbox2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:button="@null"
                    android:background="@drawable/dianzan"/>

                <TextView
                    android:id="@+id/film_text_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/three2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/filmreview_time2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>