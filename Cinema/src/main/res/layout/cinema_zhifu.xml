<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_14"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_24"/>

    <ImageView
        android:id="@+id/detail_down"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24" />

    <ImageView
        android:id="@+id/wx"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/weixin"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24" />

    <TextView
        android:id="@+id/wx_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@id/wx"
        app:layout_constraintBottom_toBottomOf="@id/wx"
        app:layout_constraintLeft_toRightOf="@id/wx"
        android:layout_marginLeft="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/alipay"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/pay_zhifubao"
        app:layout_constraintTop_toBottomOf="@id/wx"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24" />

    <TextView
        android:id="@+id/alipay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝支付"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="88dp"
        tools:ignore="MissingConstraints" />
    <RadioGroup
        android:id="@+id/radiogroup_zhi"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_64"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/wx"
        app:layout_constraintBottom_toBottomOf="@id/alipay"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/pay_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/pay_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/confirm_pay"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:text="微信支付53.9元"
        android:textSize="@dimen/sp_16"
        android:textColor="#ffffff"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/sele_btn_color"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>