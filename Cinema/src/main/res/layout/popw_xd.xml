<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true"
    >


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/xd_shape"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_73">
        <TextView
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_38"
        android:text="合计 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:textColor="#666666"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_38"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/popw_xd_price"
            android:textColor="#b11450"
            android:textSize="@dimen/sp_36"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_25"
            android:text="52.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/popw_xd_dui"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@mipmap/group2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50" />

        <ImageView
            android:id="@+id/popw_xd_finish"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/group3"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38" />



    </LinearLayout>

</RelativeLayout>