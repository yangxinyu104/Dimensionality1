<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true"
    >


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/popw_shape"
        android:layout_marginTop="@dimen/dp_175"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:text="影评"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/popw_review_finish"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@mipmap/down"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />

        </RelativeLayout>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_26"
            android:id="@+id/popw_review_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            ></com.jcodecraeer.xrecyclerview.XRecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/popw_review_finishs"
            android:src="@mipmap/returns"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/popw_review_pl"
            android:src="@mipmap/publish"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />

    </RelativeLayout>
    


</RelativeLayout>