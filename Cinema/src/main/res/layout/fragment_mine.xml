<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_mys"
        android:layout_height="@dimen/dp_220">

        <ImageView
            android:id="@+id/mine_sound"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/remind"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mine_head"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:src="@mipmap/head"
                app:roundedCornerRadius="@dimen/dp_50" />
            <TextView
                android:id="@+id/mine_name"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="高杨"/>
            <Button
                android:id="@+id/qiandao"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="签到"
                android:background="@drawable/ripple"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106">

        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5px"
            app:cardBackgroundColor="#FFFFFDFD"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mine_myinfo"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/messiage_v"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"
                    android:text="我的信息"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5px"
            app:cardBackgroundColor="#FFFFFDFD"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mine_like"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/attention_xin"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="我的关注"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mine_bypiao"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_24"
                        android:src="@mipmap/rccord_yj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="购票记录"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5px"
            app:cardBackgroundColor="#FFFFFDFD"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mine_yijian"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_24"
                        android:src="@mipmap/feedback_jl" />
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mine_update"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/version_zhuan"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="最新版本"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back_login"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/logout_fanhui"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="退出登录"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="©八维移动通讯学院毕业作品"/>
</LinearLayout>
