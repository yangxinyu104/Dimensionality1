<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.activity.FilmCinemaActivity">
    
    <LinearLayout
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_35"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/film_cinema_name"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#b11450"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:text="选择合适的影院"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:paddingTop="@dimen/dp_10"
            android:id="@+id/film_cinema_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
        
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_alignParentBottom="true"
        android:id="@+id/film_cinema_finish"
        android:src="@mipmap/returns"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />


</RelativeLayout>
