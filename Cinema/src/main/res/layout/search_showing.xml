<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20">


    <ImageView
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/movielevel" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/search_showing_SimpleDraweeView"
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_150"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="@dimen/dp_8" />

    <LinearLayout
        android:paddingTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/search_showing_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
        <CheckBox
            android:layout_marginHorizontal="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_2"
            android:button="@null"
            android:id="@+id/search_showing_xin"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
            <!--android:background="@drawable/shape_xin"-->
        </RelativeLayout>
        <TextView
            android:ellipsize="end"
            android:id="@+id/search_showing_xq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_190"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
